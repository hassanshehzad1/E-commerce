<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carts-</title>
    <link rel="stylesheet" href="/css/cart.css" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
  </head>
  <body>
    <!-- Carts -->
    <% if(userCarts){%>
    <div class="card">
      <div class="row">
        <div class="col-md-8 cart">
          <div class="title">
            <div class="row">
              <div class="col">
                <h4><b>Pay and get it</b></h4>
              </div>
              <div class="col align-self-center text-right text-muted">
                <%= userCarts.length %> Products
              </div>
            </div>
          </div>
          <%userCarts.forEach(function(item){%>
          <div class="row border-top border-bottom">
            <div class="row main align-items-center">
              <div class="col-2 bc" style="background-color: <%=item.bgcolor%>">
                <img
                  src="data:image/png;base64,<%= item.image %>"
                  alt="<%= item.name %>"
                />
              </div>
              <div class="col">
                <div class="row text-muted" style="color: <%=item.textcolor%>">
                  <%=item.name%>
                </div>
                <div class="row" style="color: ;<%=item.textcolor%>">
                  <%=item.brand%>
                </div>
              </div>
              <div class="col">
                <a href="#" style="color: <%=item.panelcolor%>">-</a
                ><a href="#" class="border" style="color: <%=item.panelcolor%>"
                  ><%=item.quantity%></a
                ><a href="#" style="color: <%=item.panelcolor%>">+</a>
              </div>
              <div class="col">
                <p>product price</p>
                &euro; <%=item.price %>
              </div>
              <div class="col">
                <p>Total price</p>
                &euro; <%=(item.price * item.quantity) - item.discountprice%>
                <span class="close">&#10005;</span> &euro;
                <%=item.discountprice%>
              </div>
            </div>
          </div>
          <%}) %>
          <div class="back-to-shop">
            <a href="/index/shop">&leftarrow;</a
            ><span class="text-muted">Back to shop</span>
          </div>
        </div>
        <div class="col-md-4 summary">
          <div>
            <h5><b>Summary</b></h5>
          </div>
          <hr />
          <div class="row">
            <div class="col" style="padding-left: 0"></div>
            <div class="col text-right">Bill&euro; <%=totalPrice %></div>
          </div>
          <form>
            <p>SHIPPING: Tax- &euro;5.00</p>
            <select>
              <option class="text-muted">
                <%= (totalPrice * (5 / 100 )) %>
              </option>
            </select>
            <p>GIVE CODE</p>
            <input id="code" placeholder="Enter your code" />
          </form>
          <div
            class="row"
            style="border-top: 1px solid rgba(0, 0, 0, 0.1); padding: 2vh 0"
          >
            <div class="col">Total bill after shipp:</div>
            <div class="col text-right">
              &euro;<%=(totalPrice * (5 / 100 )) + totalPrice%>
            </div>
          </div>
          <button class="btn">CHECKOUT</button>
        </div>
      </div>
    </div>
    <% } %>
    
  </body>
</html>
